@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewBag.Title = "Създай роля";
}

<h1 class="text-center">Създай роля</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-danger mb-2" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Index">Върни се към списъка</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}