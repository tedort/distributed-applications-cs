﻿@{
    ViewBag.Title = "Промени роля";
}

<h2 class="text-center">Промени роля на потребител</h2>

<form asp-action="ManageRoleToUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label for="userEmail" class="control-label">Потребителски Email</label>
            <input placeholder="User Email" name="userEmail" class="form-control" />
        </div>
        <div class="form-group">
            <label for="roleName" class="control-label">Потребителска роля</label>
            <select name="roleName" class="form-control" asp-items="ViewBag.Roles"></select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Запиши" class="btn btn-warning mt-2 mb-2" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Върни се към списъка</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}