@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Потребителски роли";
}

<h1 class="text-center">Списък с роли</h1>
<a class="btn btn-primary" asp-action="Create">Добави</a> |
<a class="btn btn-primary" asp-action="ManageRoleToUser">Промени роля на потребител</a>

<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Име</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>