@model FinalProject.Data.Entities.Train

@{
    ViewData["Title"] = "Изтрий влак";
}

<h1 class="text-center">Изтрий влак</h1>

<h3>Искате ли да изтриете този влак?</h3>
<div>
    <h4>Train</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Върни се към списъка</a>
    </form>
</div>
