@model FinalProject.Data.Entities.Timetable

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Изтрий разписание</h1>

<h3>Искате ли да изтриете това разписание?</h3>
<div>
    <h4>Timetable</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Train)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Train.TrainNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Station)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Station.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsStartStation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsStartStation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsFinalStation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsFinalStation)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Върни се към списъка</a>
    </form>
</div>
